<h1>Listing units</h1>

<table>
  <tr>
    <th>Scout Type</th>
    <th>Number</th>
    <th>Group</th>
    <th>Sponsor name</th>
    <th>City</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.scout_type %></td>
    <td><%= unit.number %></td>
    <td><%= unit.group %></td>
    <td><%= unit.sponsor_name %></td>
    <td><%= unit.city %></td>
    <td><%= unit.state %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

